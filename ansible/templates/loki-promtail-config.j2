server:
  http_listen_port: 9080
  grpc_listen_port: 0

positions:
  filename: /mnt/logs/positions.yaml

clients:
  - url: 'http://localhost:3100/loki/api/v1/push'

scrape_configs:

  - job_name: syslog
    static_configs:
      - targets:
          - localhost
        labels:
          job: syslog
          __path__: /var/log/syslog
          
  - job_name: tunderbird
    static_configs:
      - targets:
          - localhost
        labels:
          job: thunderbird
          __path__: /var/log/thunderbird/thunderbird.log      

  - job_name: nginx
    static_configs:
      - targets:
         - localhost
        labels:
          job: nginx
          __path__: /var/log/nginx/*.log

  - job_name: hdfs
    static_configs:
      - targets:
          - localhost
        labels:
          job: hdfs
          __path__: /var/log/hdfs/*.log